{
    "buckets": {
        "video": "your-cloud-storage-bucket-for-video",
        "audio": "your-cloud-storage-bucket-for-audio",
        "speechResponse": "your-cloud-storage-bucket-for-json",
        "srtResponse": "your-cloud-storage-bucket-for-srt"
    },
    "functions": {
        "extractAudio": {
            "trigger": {
                "event": "storage",
                "resource": "video"
            }
        },
        "transcribeAudio": {
            "trigger": {
                "event": "storage",
                "resource": "audio"
            }
        },
        "generateSRT": {
            "trigger": {
                "event": "storage",
                "resource": "speechResponse"
            }
        }
    }
}